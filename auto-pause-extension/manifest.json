{
  "manifest_version": 3,
  "name": "Auto Break for All Videos",
  "version": "3.1",
  "description": "Pauses any HTML5 video every configured minutes and shows a progress-bar break overlay with Skip button.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["<all_urls>"],

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
       "all_frames": true
    }
  ],
 

  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "skip-break": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Skip current break"
    },
    "toggle-auto-break": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Toggle auto break on/off"
    }
  }
}